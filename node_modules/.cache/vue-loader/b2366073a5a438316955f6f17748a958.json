3,"sources":["comment.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AA8FA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"comment.vue","sourceRoot":"src\\components\\sub","sourcesContent":["<template>\r\n    <div class=\"app-comment\">\r\n        <h3>发表评论</h3>\r\n        <textarea placeholder=\"请输入内容\" maxlength=\"120\" v-model=\"content\"></textarea>\r\n        <mt-button size=\"large\" @click=\"postComment\">发表评论</mt-button>\r\n        <!--评论显示区-->\r\n        <div class=\"cmt-list\">\r\n            <div class=\"cmt-item\" v-for=\"(item,i) of list\">\r\n                <div class=\"cmt-info\">\r\n                    <div class=\"cmt-header\">\r\n                        <div>{{item.user_name}}</div>\r\n                        <div class=\"cmt-author\">\r\n                        {{i+1}}楼\r\n                        </div>\r\n                    </div>\r\n                    <div class=\"cmt-body\">\r\n                        {{item.content}}\r\n                    </div>\r\n                    <div class=\"cmt-footer\">\r\n                        {{item.ctime | datetimeFilter}}\r\n                    </div>\r\n                </div>\r\n            </div>\r\n        </div>\r\n        <button @click=\"getMore\" class=\"getcomment\">加载更多</button>\r\n    </div>\r\n</template>\r\n<script>\r\nimport newsinfo from '../news/NewsInfo.vue'\r\n    export default {\r\n        data(){\r\n            return {\r\n                nid:this.$route.query.id,\r\n                list:[],//当前页内容\r\n                pno:1,   //页码\r\n                pageSize:7, //页大小\r\n                pageCount:1,  //总页数\r\n                content:'',  //评论内容\r\n                user_name:'',//用户名\r\n            }\r\n        },\r\n        props:['newsId'],\r\n        created() {\r\n            this.getMore();\r\n        },\r\n        methods:{\r\n            getMore(){\r\n                if(this.pno<=this.pageCount){\r\n                    this.$http.get('getcomment?nid='+this.newsId+'&pno='+this.pno+'&pageSize='+this.pageSize).then(function(result){\r\n                        var res=result.body;\r\n                        this.user_name=res.uname;\r\n                        var rows=this.list.concat(res.result)\r\n                        this.list=rows;\r\n                        console.log(this.list)\r\n                        this.pageCount=res.pageCount;\r\n                    })\r\n                    this.pno++;\r\n                }\r\n            },\r\n            postComment(){\r\n                //1.获取用户输入内容，新闻编号，用户名\r\n                var content=this.content;\r\n                var nid=this.nid;\r\n                var user_name=this.user_name;\r\n                //判断如果评论内容为空\r\n                var size=content.trim().length\r\n                if(size==0){\r\n                    //提示评论内容不能为空\r\n                    this.$toast({message:'内容不能为空',duration:1000});\r\n                    return;\r\n                }\r\n                var url='addComment';\r\n                var obj={nid:nid,user_name:user_name,content:content};\r\n                //发送post请求\r\n                this.$http.post(url,obj).then(result=>{\r\n                    var obj=result.body;\r\n                    if(obj.code==1){\r\n                        //成功提示发表成功\r\n                        this.$toast({message:'发表成功',duration:1000});\r\n                        //显示最新一页数据\r\n                        this.pno=0;\r\n                        this.list=[];\r\n                        this.getMore();\r\n                        this.content='';\r\n                    }else{\r\n                        this.$toast({message:obj.msg,duration:1000});\r\n                        this.$router.push('login')\r\n                    }\r\n                })\r\n            }\r\n        }\r\n    }\r\n</script>\r\n<style scoped>\r\n    .app-comment h3 {\r\n        font-size:18px;\r\n    }\r\n    .app-comment textarea {\r\n        font-size:14px;\r\n        height:68px;\r\n        margin:0;\r\n    }\r\n    .app-comment .cmt-list {\r\n        margin:10px 0;\r\n    }\r\n    .app-comment .cmt-list .cmt-item::after {\r\n        display:block;\r\n        content:'';\r\n        clear:both;\r\n    }\r\n    .app-comment .cmt-list .cmt-item {\r\n        border:1px solid #aaa;\r\n        margin-top:15px;\r\n    }\r\n    .app-comment .cmt-list .cmt-info {\r\n        line-height:30px;\r\n        border:1px solid #efeff4;\r\n        color:#aaa;\r\n    }\r\n    .app-comment .cmt-list .cmt-footer {\r\n        float:right;\r\n    }\r\n    .app-comment .cmt-list .cmt-header {\r\n        display:flex;\r\n        justify-content:space-between;\r\n    }\r\n    .app-comment .cmt-list .cmt-author {\r\n        color: aquamarine;\r\n    }\r\n</style>"]}]}